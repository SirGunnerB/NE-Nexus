{
  "name": "ne-nexus",
  "version": "1.0.0",
  "description": "Desktop recruitment platform for managing job postings and applications",
  "author": "SirGunnerB",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "concurrently \"cross-env NODE_ENV=development nodemon main.js\" \"cd client && npm start\"",
    "build": "cd client && npm run build",
    "package": "electron-builder build --mac --win -c.extraMetadata.main=main.js",
    "install-client": "cd client && npm install",
    "postinstall": "electron-builder install-app-deps",
    "rebuild": "electron-rebuild -f -w sqlite3",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write \"**/*.{js,jsx,json,md}\"",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "prepare": "husky install"
  },
  "build": {
    "appId": "com.recruitment.app",
    "productName": "Recruitment App",
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "files": [
      "main.js",
      "models/**/*",
      "routes/**/*",
      "middleware/**/*",
      "utils/**/*",
      "client/build/**/*",
      "package.json",
      "node_modules/**/*"
    ],
    "extraResources": [
      {
        "from": "./data",
        "to": "data",
        "filter": [
          "**/*"
        ]
      }
    ],
    "mac": {
      "category": "public.app-category.business",
      "target": [
        "dmg",
        "zip"
      ],
      "publish": [
        "github"
      ]
    },
    "win": {
      "target": "nsis",
      "publish": [
        "github"
      ]
    },
    "linux": {
      "target": "AppImage",
      "publish": [
        "github"
      ]
    },
    "asar": true,
    "asarUnpack": [
      "node_modules/sqlite3/**/*"
    ]
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "electron-is-dev": "^2.0.0",
    "electron-updater": "^6.1.7",
    "express": "^4.18.2",
    "express-validator": "^7.0.1",
    "jsonwebtoken": "^9.0.2",
    "nodemailer": "^6.9.9",
    "sequelize": "^6.35.2",
    "sqlite3": "5.0.2"
  },
  "devDependencies": {
    "@electron/rebuild": "^3.6.0",
    "concurrently": "^9.1.2",
    "cross-env": "^7.0.3",
    "electron": "^28.1.0",
    "electron-builder": "^24.13.3",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-security": "^2.1.1",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "lint-staged": "^15.4.1",
    "node-gyp": "^10.0.1",
    "nodemon": "^3.1.9",
    "prettier": "^3.2.5"
  },
  "lint-staged": {
    "*.{js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:SirGunnerB/NE-Nexus.git"
  },
  "engines": {
    "node": "18.x"
  }
}
